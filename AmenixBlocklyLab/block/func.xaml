<UserControl x:Class="AmenixBlocklyLab.block.func"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AmenixBlocklyLab.block"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="100">
    <Grid>
        <Polygon Fill="LightBlue" x:Name="polygon"
            Points="5,0 15,0 20,5 30,5 35,0 95,0 100,5 100,35 35,35 30,40 20,40 15,35 0,35 0,5">
        </Polygon>
        <Border Padding="3, 3, 3, 3" BorderBrush="Transparent" BorderThickness="1">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal" x:Name="ContentPanel" />
        </Border>
    </Grid>
</UserControl>
